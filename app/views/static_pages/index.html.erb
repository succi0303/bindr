<div class="home_image_wrap text-center">

  <h1>Bindr.</h1>
  <p class="lead">プログラミング関連の連載記事を集めて検索するサイト。</p>

</div>

<div class="home_search_wrap text-center">

  <%= form_tag(search_binders_path, method: :get) do %>
    <div class="input-group input-group-lg">
      <%= search_field_tag :q, '', placeholder: '連載記事を検索する..',
        class: 'form-control', value: params[:q], role: 'search', autofocus: true %>
      <span class="input-group-btn">
        <%= button_tag(type: 'submit', class: 'btn btn-default') do %>
          <%= fa_icon 'search' %>
        <% end %>
      </span>
    </div>
  <% end %>

</div>

<div class="home_tags_wrap text-center">

  <h3 class="text-info">人気のタグ</h3>

  <p>
    <% @tags.each do |tag_obj| %>
      <%= tag_link(tag_obj) %>
    <% end %>
  </p>

</div>

<div class="home_binders_wrap">

  <div class="row">
    <div class="col-md-6">
      <div class="panel panel-info">
        <div class="panel-heading">
          <h4 class="panel-title">最近更新された連載記事</h4>
        </div>
        <div class="panel-body">
        <ul class="list-unstyled">
          <% @recent_binders.each do |recent_binder| %>
            <li><%= link_to(recent_binder.title, binder_path(recent_binder)) %></li>
          <% end %>
        </ul>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="panel panel-info">
        <div class="panel-heading">
          <h4 class="panel-title">人気の連載記事</h4>
        </div>
        <div class="panel-body">
          <ul class="list-unstyled">
            <% @popular_binders.each do |popular_binder| %>
              <li><%= link_to(popular_binder.title, binder_path(popular_binder)) %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>

</div>
