<%# add navigation links to this file %>
<li><%= link_to '連載記事一覧', binders_path %></li>
<% if signed_in? %>
  <li><%= link_to '連載記事の登録', new_binder_path %></li>
  <li class="dropdown">
    <a class="dropdown-toggle" href="#" data-toggle="dropdown">
      <%= current_user.name %> <b class="caret"></b>
    </a>
    <ul class="dropdown-menu">
      <li><%= link_to 'ユーザーページ', current_user %></li>
      <li><%= link_to 'プロフィール変更', edit_user_path(current_user) %></li>
      <li class="divider"></li>
      <li><%= link_to 'ログアウト', logout_path, method: "delete" %></li>
    </ul>
  </li>
<% else %>
  <li><%= link_to 'ログイン', login_path %></li>
  <li><%= link_to 'ユーザー登録', signup_path %></li>
<% end %>
