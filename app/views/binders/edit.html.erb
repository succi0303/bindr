<% provide(:title, '連載記事の編集') %>

<div class="page-header">
  <h1>連載記事の編集</h1>
</div>

<%= simple_form_for @binder, url: binder_path(@binder) do |f| %>
  <%= render 'form', f: f %>
  <div class="text-center">
    <%= f.button :submit, '更新する', class: 'btn btn-primary btn-lg',
      data: { disable_with: '更新中...' } %>
  </div>
<% end %>

<br />

<div class="panel panel-danger">
  <div class="panel-heading">
    <h3 class="panel-title"><%= fa_icon 'exclamation-triangle' %> 連載記事の削除</h3>
  </div>
  <div class="panel-body">
    連載記事を削除します。この操作は取り消しできませんので注意してください。<br /><br />
    <%=
      link_to '連載記事の削除', binder_path(@binder),
        method: :delete,
        data: { confirm: '削除してよろしいですか？' },
        class: 'btn btn-danger'
    %>
  </div>
</div>
