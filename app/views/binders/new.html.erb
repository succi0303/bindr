<% provide(:title, '連載記事の登録') %>

<div class="page-header">
  <h1>連載記事の登録</h1>
</div>

<%= simple_form_for @binder, url: binders_path do |f| %>
  <%= render 'form', f: f %>
  <div class="text-center">
    <%= f.button :submit, '登録する', class: 'btn btn-primary btn-lg',
      data: { disable_with: '登録中...' } %>
  </div>
<% end %>
