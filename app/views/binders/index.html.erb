<% provide(:title, '連載記事一覧') %>

<div class="page-header">
  <h1>連載記事一覧</h1>
</div>

<% @binders.each do |binder| %>
  <div class="row">
    <div class="col-sm-9">
      <h2>
        <%= link_to binder.title, '#' %>
      </h2>
      <p class="lead"><%= binder.description %></p>
      
      <p>
        <% binder.tag_list.each do |tag| %>
          <span class="label label-info"><%= tag %></span>
        <% end %>
      </p>

      <p class="text-info">
        <span>更新日: <%= time_ago_in_words binder.updated_at %></span>
      </p>
    </div>

    <div class="col-sm-3">
      <dl>
        <dt>登録者</dt>
        <dd><%= binder.user.name %></dd>
      </dl>
      <dl>
        <dt>閲覧数</dt>
        <dd><%= binder.view_count %></dd>
      </dl>
    </div>
  </div>

  <hr />
<% end %>
